<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="1" type="template" client="site" method="upgrade">
	
	<name>PasoDoble</name>
	<creationDate>2015-01-01</creationDate>
	<author>Johannes Hock</author>
	<copyright>Copyright Â© 2015 Johannes Hock adhocgrafx.de</copyright>
	<authorEmail>info@adhocgrafx.de</authorEmail>
	<authorUrl>http://www.adhocgrafx.de</authorUrl>
	<version>1.0.0</version>
	<description>
		<![CDATA[
		<h1>Paso Doble / responsive Joomla! 3 template</h1>
		<p>Created by <a href="http://www.adhocgrafx.de" target="_blank">adhocgraFX | adhocgrafx.de</a>.</p>
		<img src="../templates/pasodoble/template_preview.png" />
		<h2>Modulepositions</h2>
		<ul>
			<li>search</li>
			<li>nav</li>
			<li>breadcrumbs</li>
			<li>slideshow</li>
			<li>top_row</li>
			<li>sidebar</li>
			<li>bottom_row</li>
			<li>footer</li>
			<li>debug</li>
		</ul>
		]]>
	</description>
	
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
        <folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
        <folder>languages</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
        <filename>humans.txt</filename>
        <filename>index.php</filename>
        <filename>manifest.json</filename>
        <filename>manifest.webapp</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions>
		<position>nav</position>
		<position>search</position>
		<position>slideshow</position>
		<position>breadcrumbs</position>
		<position>sidebar</position>
		<position>top_row</position>
		<position>bottom_row</position>
		<position>footer</position>
		<position>debug</position>
	</positions>

    <languages folder="languages">
        <language tag="de-DE">de-DE.tpl_pasodoble.ini</language>
        <language tag="en-EN">en-EN.tpl_pasodoble.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="options">
                <field name="Logo Image"
                       type="spacer"
                       hr="false" >
                </field>
                <field name="logo"
                       type="media"
                       label="Logo"
                       description="Select logo image" >
                </field>

                <field name="Typography"
                       type="spacer"
                       hr="false" >
                </field>
                <field name="basefontsize"
                       type="text"
                       filter="integer"
                       size="3"
                       default="100"
                       label="Html base font size"
                       description="Html base font size in %" >
                </field>
                <field name="textindent"
                       type="radio"
                       default="0"
                       label="Text indent Paragraph"
                       description="Text indent Paragraph">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="textresizer"
                       type="radio"
                       default="0"
                       label="Textresizer"
                       description="Textresizer">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="Main Content and Aside Width / flex ratio"
                       type="spacer"
                       hr="false" >
                </field>
                <field name="mainwidth"
                       type="text"
                       filter="integer"
                       default="75"
                       label="Content Width"
                       description="Content Width Flex Factor"
                       size="7" >
                </field>
                <field name="asidewidth"
                       type="text"
                       filter="integer"
                       default="25"
                       label="Aside Width"
                       description="Aside Width Flex Factor"
                       size="7" >
                </field>
            </fieldset>

            <fieldset name="advanced">
                <field name="Google Analytics"
                       type="spacer"
                       hr="false" >
                </field>
                <field name="analytics"
                       type="text"
                       default="UA-XXXXX-X"
                       label="Google Analytics"
                       description="Google analytics code; anonym, asynchon"
                       size="10" >
                </field>
            </fieldset>
        </fields>
    </config>
	
</extension>
